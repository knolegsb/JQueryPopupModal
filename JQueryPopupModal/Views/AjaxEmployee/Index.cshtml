
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button type="button" id="btnCreate" class="btn btn-primary" data-toggle="modal" data-target="#empModal">
        Create New
    </button>
</p>

<table id="listEmployees" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Emp_Id</th>
            <th>Name</th>
            <th>Department</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Mobile</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<div class="modal fade" id="empModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><label id="title"></label></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="hidden" class="form-control" id="Id" />
                            <label>Emp_Id</label>
                            <input type="text" id="Emp_Id" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Name</label>
                            <input type="text" id="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Department</label>
                            <input type="text" id="Department" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>City</label>
                            <input type="text" id="City" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>State</label>
                            <input type="text" id="State" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Country</label>
                            <input type="text" id="Country" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Mobile</label>
                            <input type="text" id="Mobile" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="btnSave" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            getEmployees();
        });

        var isUpdatable = false;

        function getEmployees() {
            $.ajax({
                url: '/AjaxEmployee/GetEmployees/',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var rows = '';
                    $.each(data, function (i, item) {
                        rows += "<tr>";
                        rows += "<td>" + item.Id + "</td>"
                        rows += "<td>" + item.Emp_Id + "</td>"
                        rows += "<td>" + item.Name + "</td>"
                        rows += "<td>" + item.Department + "</td>"
                        rows += "<td>" + item.City + "</td>"
                        rows += "<td>" + item.State + "</td>"
                        rows += "<td>" + item.Country + "</td>"
                        rows += "<td>" + item.Mobile + "</td>"
                        rows += "<td><button type='button' id='btnEdit' class='btn btn-default' onclick='return getDetailEmp(" + item.Id + ")'>Edit</button><button type='button' id='btnDelete' class='btn btn-danger' onclick='return deleteEmp(" + item.Id + ")'>Delete</button></td>"
                        rows += "</tr>";
                        $("#listEmployees tbody").html(rows);
                    });
                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }

        function getDetailEmp(id) {
            $("#title").text("Details");
            $("#empModal").modal("show");
            $.ajax({
                url: '/AjaxEmployee/GetEmployee/' + id,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    console.log(data);
                    $("#Id").val(data.Id);
                    $("#Emp_Id").val(data.Emp_Id);
                    $("#Name").val(data.Name);
                    $("#Department").val(data.Department);
                    $("#City").val(data.City);
                    $("#State").val(data.State);
                    $("#Country").val(data.Country);
                    $("#Mobile").val(data.Mobile);
                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }

        $("#btnSave").click(function (e) {
            var data = {
                Emp_Id: $("#Emp_Id").val(),
                Name: $("#Name").val(),
                Department: $("#Department").val(),
                City: $("#City").val(),
                State: $("#State").val(),
                Country: $("#Country").val(),
                Mobile: $("#Mobile").val()
            }

            if (!isUpdatable) {
                $.ajax({
                    url: '/AjaxEmployee/Create/',
                    type: 'POST',
                    dataType: 'json',
                    data: data,
                    success: function (data) {
                        getEmployees();
                        $("#empModal").modal('hide');
                        clear();
                    },
                    error: function (err) {
                        alert("Error: " + err.responseText);
                    }
                });
            }
            else {
                $.ajax({
                    url: '/AjaxEmployee/Update',
                    type: 'POST',
                    dataType: 'json',
                    data: data,
                    success: function (data) {
                        getEmployees(),
                        isUpdatable = false;
                        $("#bookModal").modal('hide');
                        clear();
                    },
                    error: function (err) {
                        alert("Error: " + err.responseText);
                    }
                });
            }
        });

        function deleteEmp(id) {
            var confirmDelete = confirm("Do you want to delete this book?");
            if (confirmDelete) {
                $.ajax({
                    url: "/AjaxEmployee/Delete/" + id,
                    type: "POST",
                    dataType: 'json',
                    success: function (data) {
                        getEmployees();
                    },
                    error: function (err) {
                        alert("Error: " + err.responseText);
                    }
                });
            }
        }

        $("#btnCreate").click(function () {
            $("#title").text("Create New");            
            $("#Emp_Id").val("");
            $("#Name").val("");
            $("#Department").val("");
            $("#City").val("");
            $("#State").val("");
            $("#Country").val("");
            $("#Mobile").val("");
        });

        $("#btnClose").click(function () {
            clear();
        });

        function clear() {
            $("#Emp_Id").val("");
            $("#Name").val("");
            $("#City").val("");
            $("#State").val("");
            $("#Country").val("");
            $("#Mobile").val("");
        }
    </script>    
}